{% extends 'base.html.twig' %}

{% block title %} Trabajadores {% endblock %}
{% block body %}
    <h1>Modificar trabajador</h1>

    <div class="col-md-5">
    {{ form_start(edit_form) }}
        {#{{ form_widget(edit_form) }}#}
        {{ form_row(edit_form.ci) }} <br><br>
        {{ form_row(edit_form.nombre) }} <br><br>
        {{ form_row(edit_form.apellidos) }} <br><br>
        <h3>Contactos del trabajador</h3>
        {% for contacto in edit_form.contactos %}
            {#{{ form_row(form.contactos.vars.prototype.contacto) }}#}
            {#{{ form_row(form.contactos.vars.prototype.valor) }}#}
            <div class="col-md-5">{{ form_row(contacto.contacto) }}</div>
            <div class="col-md-7">{{ form_row(contacto.valor) }}</div><br><br>
        {% endfor %}
    {{ form_end(edit_form) }}

    <a href="{{ path('trabajador_index') }}" class="btn btn-default btn-block">Regresar a la lista</a>
        <br>
    {{ form_start(delete_form) }}
        <input type="submit" value="Eliminar este trabajador" class="btn btn-danger btn-block">
    {{ form_end(delete_form) }}

    </div>
{% endblock %}
