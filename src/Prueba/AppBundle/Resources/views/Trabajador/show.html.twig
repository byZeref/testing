{% extends 'base.html.twig' %}

{% block body %}
    <h1>Trabajador</h1>

    <div class="col-md-6">
        <table class="table">
            <tbody>
            {#<tr>#}
                {#<th>ID</th>#}
                {#<td>{{ trabajador.id }}</td>#}
            {#</tr>#}
            <tr>
                <th>CI</th>
                <td>{{ trabajador.ci }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ trabajador.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ trabajador.apellidos }}</td>
            </tr>
            {% for cont in trabajador.contactos %}
            <tr>
                <th>{% if(cont.contacto == 'telefono') %} {{ 'Tel√©fono' }}
                    {% elseif (cont.contacto == 'correo') %} {{ 'Correo' }}
                    {% endif %}
                </th>
                <td>{{ cont.valor }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('trabajador_edit', { 'id': trabajador.id }) }}" class="btn btn-primary btn-block">Editar</a>
        <a href="{{ path('trabajador_index') }}" class="btn btn-default btn-block">Regresar a la lista</a>
        <br>
        {{ form_start(delete_form) }}
        <input type="submit" value="Eliminar este trabajador" class="btn btn-danger btn-block">
        {{ form_end(delete_form) }}
    </div>



{% endblock %}
